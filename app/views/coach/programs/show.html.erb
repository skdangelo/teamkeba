<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= current_program.title %></h1>
  <% if current_program.image.present? %>
    <%= image_tag current_program.image.url, class: 'img-fluid' %>
  <% end %>    
  <br/>
  <p><%= current_program.description %></p>
  <p><%= current_program.start_date %></p>
  <p><%= current_program.end_date %></p>
  <br/><br/>
  <i><%= current_program.address %></i>
  <div class="float-right">
    <% if current_user && current_user == current_program.user %>
      <%= link_to 'Destroy Program', coach_program_path(current_program), method: :delete, data: {confirm: 'Are you sure you want to delete this program?'}, class: 'btn btn-danger' %> 
      <%= link_to 'Edit Program', edit_coach_program_path(current_program), class: 'btn btn-danger', method: :get %>         
    <% end %>
  </div>  

  <% if current_user.try(:admin?) %>

  <% end %>
</div>