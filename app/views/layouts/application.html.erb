<!DOCTYPE html>
<html>
  <head>
    <title>Team Keba</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar navbar-toggleable-md navbar-light bg-inverse">
                <%= link_to 'Team Keba', root_url, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent1" aria-controls="navbarSupportedContent1" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent1">
          <ul class="navbar-nav mr-auto mt-2 mt-md-0">
            <li class="nav-item">
              <%= link_to 'Home', root_url, class: 'nav-link' %>
            </li>            
            <li class="nav-item">
              <%= link_to 'Programs', programs_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'News', news_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Calendar', calendar_path, class: 'nav-link' %>
            </li>   
            <li class="nav-item">
              <%= link_to 'Gallery', gallery_path, class: 'nav-link' %>
            </li>                     
            <li class="nav-item">
              <%= link_to 'About Us', aboutus_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Contact Us',  new_contact_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Resources', paperwork_path, class: 'nav-link' %>
            </li>   

            <% if user_signed_in? %>           
              <li class="nav-item">
                <%= link_to 'Dashboard', dashboard_path, class: 'nav-link' %>
              </li>                       
              <li class="nav-item">
                <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Edit Profile', edit_user_registration_path %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
              </li>
            <% end %>
          </ul>        
        </div>
      </nav>
     
      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>

    <div id="footer">
      <div class="container">
        <div class="row">
          <% if current_user.try(:admin?) %>
            <div class="col-12 col-sm-3">
              <b>Admin</b>
              <br />
              <%= link_to 'Add A Program', new_coach_program_path %>
              <br />
              <%= link_to 'My Dashboard', dashboard_path %>            
            </div>
          <% end %>
          <div class="col-12 col-sm-3">
            <b>About</b>
              <br />
              <%= link_to 'Coaches', aboutus_path %>
              <br />
              <%= link_to 'Programs', programs_path %>            
          </div>
          <div class="col-12 col-sm-3">
            <b>Location</b>
              <br />
              CSO Training Facility 
              <br />
              1301 E. 47TH St. 
              <br />
              Chicago, IL., 60653
          </div>
          <div class="col-12 col-sm-3 social">
            <b>Social</b>
            <br />
            <br />
            <%= link_to 'https://www.instagram.com/kpva_eliteschicago/' do %>
              <span class="fa fa-instagram fa-2x social-button"></span>
            <% end %>
            <%= link_to 'https://www.facebook.com/KPVAELITES/' do %>
              <span class="fa fa-facebook-square fa-2x social-button"></span>
            <% end %>
            <%= link_to 'https://twitter.com/kpva_elites' do %>
              <span class="fa fa-twitter-square fa-2x social-button"></span>
            <% end %>
          </div>
        </div>   
      </div>
    </div>    
    <script src="https://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>    
  </body>
</html>
